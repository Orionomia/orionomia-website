---
interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const {
  title,
  description = 'Digital infrastructure for scholarly publishing',
  keywords = 'OJS, Open Journal Systems, scholarly publishing, czasopisma naukowe'
} = Astro.props;

const canonicalUrl = 'https://orionomia.pl/';
---

<!DOCTYPE html>
<html lang="pl-PL">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <!-- SEO Meta Tags -->
  <meta name="description" content={description}>
  <meta name="keywords" content={keywords}>
  <meta name="author" content="Orionomia">
  <meta name="robots" content="index, follow">

  <title>{title}</title>

  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalUrl}>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalUrl}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:site_name" content="Orionomia">
  <meta property="og:locale" content="pl_PL">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/favicon.ico">

  <!-- Theme Color -->
  <meta name="theme-color" content="#0A192F">
  <meta name="msapplication-TileColor" content="#0A192F">
</head>
<body>
  <slot />
  
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const navToggle = document.querySelector(".nav-toggle");
      const navMenu = document.querySelector(".nav-menu");
      const navLinks = document.querySelectorAll(".nav-link");
      const isMobile = window.matchMedia("(max-width: 768px)");
      
      if (navToggle) {
        navToggle.addEventListener("click", function() {
          const isExpanded = this.getAttribute("aria-expanded") === "true";
          this.setAttribute("aria-expanded", String(!isExpanded));
          navMenu?.classList.toggle("active");
          document.body.style.overflow = !isExpanded ? "hidden" : "";
          this.textContent = !isExpanded ? "×" : "≡";
        });
      }
      
      navLinks.forEach(link => {
        link.addEventListener("click", function() {
          if (isMobile.matches) {
            navMenu?.classList.remove("active");
            if (navToggle) {
              navToggle.setAttribute("aria-expanded", "false");
              navToggle.textContent = "≡";
            }
            document.body.style.overflow = "";
          }
        });
      });
    });
  </script>
</body>
</html>

<style is:global>
@charset "UTF-8";

/* RESET & GLOBAL */
*, *::before, *::after {
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  font-size: 16px;
  color: #0A192F;
  background-color: #F5F5F0;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  line-height: 1.6;
  -webkit-text-size-adjust: 100%;
  text-size-adjust: 100%;
}

a {
  color: #F5F5F0;
  text-decoration: none;
}

img {
  max-width: 100%;
  height: auto;
  display: block;
}

/* MENU NAWIGACYJNE */
.main-navigation {
  background-color: #0A192F;
  position: sticky;
  top: 0;
  z-index: 1000;
}

.nav-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 1rem 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.nav-logo-link {
  position: absolute;
  left: 0;
  flex-shrink: 0;
}

.nav-logo {
  display: flex;
  width: 200px;
  height: 60px;
  align-items: center;
  justify-content: center;
}

.nav-logo svg {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

@media (min-width: 769px) {
  .nav-menu {
    position: static !important;
    background: none !important;
    flex-direction: row !important;
    transform: none !important;
    top: auto !important;
    left: auto !important;
    right: auto !important;
    bottom: auto !important;
    padding: 7px 0 0 200px !important;
    margin: 0 !important;
  }
  
  .nav-menu li {
    position: relative;
  }
}

@media (max-width: 900px) {
  .hero::after {
    opacity: 0.6 !important;
  }
}

.nav-menu {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 0;
  flex: 1;
}

.nav-menu li {
  margin: 0;
  position: relative;
}

.nav-link {
  display: block;
  padding: 0.8rem 1.2rem;
  color: #F5F5F0;
  font-size: 14px;
  font-weight: 600;
  letter-spacing: 0.5px;
  text-decoration: none;
  position: relative;
  white-space: nowrap;
  transition: color 0.3s ease;
}

.nav-link:hover {
  color: #66D9D9;
}

.nav-link:active {
  color: #66D9D9;
}

.nav-link:focus {
  outline: none;
}

.nav-link:focus-visible {
  outline: 2px solid #66D9D9;
  outline-offset: 2px;
}

.nav-toggle {
  display: none;
  background: none;
  border: none;
  cursor: pointer;
  padding: 1.2rem 2.5rem;
  z-index: 1001;
  color: #F5F5F0;
  font-size: 40px;
  font-weight: 700;
  letter-spacing: 1px;
  line-height: 1;
  transition: color 0.3s ease;
}

.nav-toggle:hover {
  color: #66D9D9;
}

.nav-toggle:focus {
  outline: none;
}

.nav-toggle:focus-visible {
  outline: 2px solid #66D9D9;
  outline-offset: 2px;
}

/* HERO */
.hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 3rem 2rem 5rem 2rem;
  background-color: #0A192F;
  color: #F5F5F0;
  position: relative;
  overflow: hidden;
}

.hero::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  background-image: url('/hero-illustration.svg');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  opacity: 0.6;
  pointer-events: none;
  z-index: 0;
}

.hero-grid {
  display: flex;
  flex-direction: column;
  gap: 2rem;
  max-width: 1200px;
  width: 100%;
  align-items: flex-start;
  position: relative;
  z-index: 1;
}

.hero-left {
  flex: 0 1 auto;
  max-width: 600px;
  width: auto;
  text-align: left;
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  position: relative;
  z-index: 2;
}

.hero-title {
  font-size: 32px;
  font-weight: 700;
  line-height: 1.3;
  margin: 0 0 1.5rem 0;
  color: #F5F5F0;
}

.hero-mission {
  font-size: 20px;
  line-height: 1.7;
  margin: 0;
}

.hero-standards {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  font-size: 14px;
  margin-top: 1rem;
}

.standard-item {
  font-weight: 400;
}

.hero-cta {
  margin-top: auto;
}

.hero-cta .cta-primary {
  display: inline-block;
  color: #0A192F;
  background-color: #66D9D9;
  text-decoration: none;
  font-weight: 600;
  font-size: 16px;
  padding: 1rem 2rem;
  border: 2px solid #66D9D9;
  transition: all 0.25s ease;
  white-space: nowrap;
  cursor: pointer;
}

.hero-cta .cta-primary:hover {
  background-color: transparent;
  color: #66D9D9;
}

.hero-cta .cta-primary:focus {
  outline: none;
}

.hero-cta .cta-primary:focus-visible {
  outline: 3px solid #66D9D9;
  outline-offset: 3px;
}

.hero-cta a:active {
  transform: translateY(1px);
}

/* CONTENT */
.container {
  max-width: 1200px;
  margin: 2rem auto;
  padding: 0 1.5rem;
  flex: 1;
  width: 100%;
}

.orionum-intro {
  max-width: 800px;
  margin: 0 auto 4rem auto;
  text-align: center;
}

.orionum-title {
  font-size: 28px;
  font-weight: 700;
  color: #0A192F;
  margin: 0 0 1.5rem 0;
  line-height: 1.3;
}

.orionum-description {
  font-size: 18px;
  line-height: 1.7;
  color: #0A192F;
  margin: 0;
}

.card-row {
  display: flex;
  gap: 2rem;
  flex-wrap: wrap;
  margin-bottom: 2rem;
}

.card {
  flex: 1 1 calc(33.333% - 1.334rem);
  min-width: 280px;
  background-color: #F5F5F0;
  padding: 2rem;
  box-shadow: 0 0 40px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  gap: 1rem;
  position: sticky;
  top: 120px;
  color: #0A192F;
  border: 1px solid rgba(10, 25, 47, 0.1);
  text-size-adjust: 100%;
}

.card-title {
  font-size: 24px;
  font-weight: 700;
  margin: 0;
}

.card-symbol {
  font-size: 44px;
  font-weight: 400;
  color: #0A192F;
  margin: 0 0 1.5rem 0;
  line-height: 1;
  letter-spacing: -0.02em;
}

.card-category {
  font-size: 12px;
  font-weight: 600;
  letter-spacing: 1.5px;
  text-transform: uppercase;
  color: #0A192F;
  margin: 0 0 0.5rem 0;
}

.card-subtitle {
  font-size: 16px;
  font-weight: 600;
  color: #0A192F;
  margin: 0.5rem 0 1rem 0;
  line-height: 1.4;
  text-size-adjust: 100%;
}

.card-text {
  font-size: 16px;
  line-height: 1.5;
  margin: 0;
  text-size-adjust: 100%;
}

.card-link-wrapper {
  margin-top: auto;
  padding-top: 1rem;
}

.card-link {
  display: inline-block;
  color: #0A192F;
  text-decoration: none;
  font-weight: 600;
  font-size: 15px;
  padding: 0.875rem 1.75rem;
  border: 2px solid #0A192F;
  background: transparent;
  transition: all 0.25s ease;
  white-space: nowrap;
  cursor: pointer;
}

.card-link:hover {
  background-color: #0A192F;
  color: #F5F5F0;
}

.card-link:focus {
  outline: none;
}

.card-link:focus-visible {
  outline: 3px solid #0A192F;
  outline-offset: 3px;
}

/* CTA SECTION */
.cta-section {
  max-width: 800px;
  margin: 4rem auto 0 auto;
  text-align: center;
  padding: 3rem 2rem;
}

.cta-title {
  font-size: 28px;
  font-weight: 700;
  color: #0A192F;
  margin: 0 0 1.5rem 0;
  line-height: 1.3;
}

.cta-description {
  font-size: 18px;
  line-height: 1.7;
  color: #0A192F;
  margin: 0 0 2rem 0;
}

.cta-button {
  display: inline-block;
  color: #F5F5F0;
  background-color: #0A192F;
  text-decoration: none;
  font-weight: 600;
  font-size: 16px;
  padding: 1rem 2.5rem;
  border: 2px solid #0A192F;
  transition: all 0.3s ease;
  white-space: nowrap;
  cursor: pointer;
}

.cta-button:hover {
  background-color: transparent;
  color: #0A192F;
}

.cta-button:focus {
  outline: none;
}

.cta-button:focus-visible {
  outline: 3px solid #0A192F;
  outline-offset: 3px;
}

.card-link:active {
  transform: translateY(1px);
}

/* FOOTER */
.site-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 2rem;
  background-color: #0A192F;
  margin-top: auto;
  color: #F5F5F0;
}

.site-footer p {
  margin: 0.5rem 0;
}

.site-footer p:nth-child(2) {
  font-size: 17px;
}

.site-footer p:nth-child(3) {
  font-size: 13px;
}

.site-footer p:nth-child(4) {
  font-size: 17px;
}

.site-footer a {
  color: #F5F5F0;
  white-space: nowrap;
  text-decoration: none;
  transition: color 0.3s ease;
}

.site-footer a:hover,
.site-footer a:active {
  color: #66D9D9;
}

.site-footer a:focus {
  outline: none;
}

.site-footer a:focus-visible {
  outline: 2px solid #66D9D9;
  outline-offset: 2px;
}

.footer-logo {
  width: 60px;
  margin-bottom: 1rem;
  opacity: 0.8;
}

.cookies-info {
  max-width: 600px;
  margin-top: 1rem;
  font-size: 12px;
  opacity: 0.7;
  line-height: 1.5;
}

@media (hover: none) and (pointer: coarse) {
  .nav-toggle:focus,
  .hero-cta a:focus,
  .nav-link:focus,
  .site-footer a:focus {
    color: inherit !important;
    border-color: inherit !important;
  }
}

/* RESPONSIVE */
@media (max-width: 768px) {
  .nav-logo-link {
    position: absolute;
    left: 0;
    z-index: 1002;
    text-decoration: none;
    display: block;
  }

  .nav-logo {
    display: flex;
    width: 200px;
    height: 60px;
    background: transparent;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    font-weight: bold;
    color: #F5F5F0;
    padding: 10px 10px 10px 13px;
  }

  .nav-toggle {
    display: block;
    position: absolute;
    right: 0;
    padding: 1.2rem 0.875rem 1.2rem 1rem;
    font-size: 40px;
    z-index: 1002;
    line-height: 1;
    transition: color 0.3s ease;
  }
  
  .nav-toggle:hover {
    color: #66D9D9;
  }
  
  .nav-toggle:focus {
    outline: none;
  }
  
  .nav-toggle:focus-visible {
    outline: 2px solid #66D9D9;
    outline-offset: 2px;
  }

  .nav-container {
    padding: 2rem 1rem;
  }

  .nav-menu {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(10, 25, 47, 0.98);
    flex-direction: column;
    justify-content: center;
    gap: 0;
    transform: translateX(100%);
    padding: 2rem;
  }

  .nav-menu.active {
    transform: translateX(0);
  }

  .nav-menu li::after {
    display: none;
  }

  .nav-link {
    padding: 1.5rem 2rem;
    font-size: 18px;
    width: 100%;
    text-align: center;
  }

  .hero::after {
    opacity: 0.6 !important;
    background-size: 200%;
  }

  .logo {
    width: 100px;
  }

  .hero-mission {
    font-size: 18px;
  }

  .cta-button {
    font-size: 16px;
    padding: 0.9rem 2rem;
  }

  .card-row {
    flex-direction: column;
    align-items: stretch;
  }

  .card {
    position: sticky;
    top: 80px;
  }

  .card-title {
    font-size: 20px;
  }

  .card {
    padding: 1.5rem;
  }

  .container {
    padding: 0 1rem;
  }
}

@media (max-width: 480px) {
  .hero-mission {
    font-size: 17px;
  }

  .cta-button {
    width: 100%;
    max-width: 300px;
  }

  .hero {
    padding: 1rem;
  }
}
